<div class="panel panel-info">
  <div class="panel-heading">
    <h3><%=@workout.date.strftime(" %d %B %Y")%></h3>
  </div>
  <div class="panel-body">
    <table class="table">
      <th>WorkOut</th>
      <th>Mood</th>
      <th>Duration</th>
    <tr>
      <td><%= @workout.workout%></td>
      <td><%= @workout.mood%></td>
      <td><%=@workout.length%></td>
    </tr>
    </table>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    <h4>Exercises</h4>
  </div>
  <div class="panel-body">
    <table class="table">
      <%= render 'exercises/exercise' %>
    </table>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <%= render 'exercises/form' %>
  </div>
</div>
<%= link_to 'edit', edit_workout_path(@workout), class: 'btn btn-info'%> <%=link_to 'back', root_path, class: 'btn btn-default' %> <%=link_to 'delete', workout_path(@workout), method: :delete, class: 'btn btn-danger' %>

